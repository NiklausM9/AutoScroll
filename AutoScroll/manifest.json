{
  "manifest_version": 2,
  "name": "AutoScroll Extension",
  "version": "1.0",
  "description": "Auto-scroll websites with endless scroll",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": ["popup.html"]
}
